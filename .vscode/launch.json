        {
            "name": "Build and debug the test_graph",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builds/test_graph",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
